def outcome (m1, m2):
    if (m1 == "A" and m2 == "X") or (m1 == "B" and m2 == "Y") or (m1 == "C" and m2 == "Z"):
        return "draw"
    elif (m1 == "A" and m2 != "Y")  or (m1 == "B" and m2 != "Z") or (m1 == "C" and m2 != "X"):
